<mah:MetroWindow x:Class="Proyecto_Intermodular_Gestion.Frontend.Dialogos.Eliminar_Funko"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared" 
   ShowCloseButton="False"
   ShowMaxRestoreButton="False"
   ShowMinButton="False"
   WindowStyle="None"
    xmlns:local="clr-namespace:Proyecto_Intermodular_Gestion.Frontend.Dialogos"
    Icon="/Recursos/Iconos/añadir_figura.png"
    Title="Eliminar Funko" Height="320" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <!--Eliminar figura-->
        <TextBlock Text="Eliminar Figura" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   FontSize="30" FontWeight="Bold" Margin="0,25,0,0"/>
        <!--Nombre del Funko a eliminar-->
        <TextBlock Text="SELECCIONA LA FIGURA" Grid.Row="1" Margin="0,10,0,0" FontWeight="ExtraLight"
                   FontSize="16" HorizontalAlignment="Center"/>
        <!--<TextBox del nombre-->
        <ComboBox x:Name="nombre_funko_eliminar" Grid.Row="2" Width="200" Margin="0,10,0,0"
                 HorizontalAlignment="Center" Background="White" BorderBrush="#14a9ff" BorderThickness="2" 
                    DisplayMemberPath="Nombre" SelectedValuePath="IdProducto"
                 FontSize="14"/>
   
        <!--Botones de eliminar y cancelar-->
        <Button x:Name="Borrar" Grid.Row="5" Foreground="White" Background="Red" Width="170" Height="60" FontSize="25"
                Margin="0,20,0,0" Content="BORRAR" BorderBrush="Black" BorderThickness="2" Click="Borrar_Click"/>

        <Button x:Name="Cancelar" Grid.Row="6" Foreground="White" Background="Gray" Width="140" Height="35" FontSize="17" Margin="0,15"
                Content="CANCELAR" Click="Cancelar_Click" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Bottom"/> 
    </Grid>
</mah:MetroWindow>
