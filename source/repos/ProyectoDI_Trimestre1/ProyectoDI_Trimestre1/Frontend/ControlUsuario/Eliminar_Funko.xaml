<mah:MetroWindow x:Class="ProyectoDI_Trimestre1.Frontend.Dialogos.Eliminar_Funko"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared" 
   ShowCloseButton="False"
   ShowMaxRestoreButton="False"
   ShowMinButton="False"
   WindowStyle="None"
    xmlns:local="clr-namespace:ProyectoDI_Trimestre1.Frontend.Dialogos"
    Icon="/Recursos/Iconos/añadir_figura.png"
    Title="Eliminar Funko" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <!--Eliminar figura-->
        <TextBlock Text="Eliminar Figura" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   FontSize="30" FontWeight="Bold" Margin="0,20,0,0"/>
        <!--Nombre del Funko a eliminar-->
        <TextBlock Text="Funko a eliminar" Grid.Row="1" Margin="0,30,0,0"
                   FontSize="16" HorizontalAlignment="Center"/>
        <!--<TextBox del nombre-->
        <ComboBox x:Name="nombre_funko_eliminar" Grid.Row="2" Width="200" Margin="0,10,0,0"
                 HorizontalAlignment="Center" Background="White" BorderBrush="#14a9ff" BorderThickness="2" 
                 FontSize="14"/>
        <!--Motivo-->
        <TextBlock Text="Motivo de la eliminación" Grid.Row="3" Margin="0,30,0,0"
           FontSize="16" HorizontalAlignment="Center"/>
        <!--TextBox del motivo-->
        <TextBox x:Name="motivo" Grid.Row="4" Width="200" Margin="0,10,0,0"
         HorizontalAlignment="Center" Background="White" BorderBrush="#14a9ff" BorderThickness="2" 
         FontSize="14"/>

        <Button x:Name="Borrar" Grid.Row="5" Foreground="White" Background="Red" Width="130" Height="40" FontSize="20"
                Margin="0,20,0,0" Content="BORRAR" BorderBrush="Black" BorderThickness="2" Click="Borrar_Click"/>

        <Button x:Name="Cancelar" Grid.Row="5" Foreground="Black" Background="Transparent" Width="90" Height="25" FontSize="10"
                Margin="-10,30,0,0" Content="CANCELAR" Click="Cancelar_Click" BorderBrush="Transparent" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom"/> 
    </Grid>
</mah:MetroWindow>
