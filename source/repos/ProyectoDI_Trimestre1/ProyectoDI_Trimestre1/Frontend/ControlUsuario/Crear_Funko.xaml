<mah:MetroWindow x:Class="ProyectoDI_Trimestre1.Frontend.Dialogos.Crear_Funko"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"
        xmlns:local="clr-namespace:ProyectoDI_Trimestre1.Frontend.Dialogos"
        Icon="/Recursos/Iconos/añadir_figura.png"
   ShowTitleBar="False"
   ShowCloseButton="False"
   ShowMaxRestoreButton="False"
   ShowMinButton="False"
   WindowStyle="None"
   ResizeMode="NoResize"
        Title="Añadir Funko" Height="550" Width="600">
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Añadir figura-->
        <TextBlock Text="AÑADIR FIGURA" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,5"
                   FontSize="40" FontWeight="Bold"/>

        <!--Nombre y Precio-->
        <TextBlock Text="Nombre del Funko (*)" Grid.Row="1" Margin="30,20,0,0" FontWeight="Black"
                   FontSize="20" FontStyle="Italic"/>
        <!--Nombre-->
        <Border BorderBrush="#14a9ff" BorderThickness="2" Grid.Row="1" Margin="0,50,0,0" Width="280">
            <TextBox x:Name="nombre_funko" Grid.Row="1" Background="White"/>
        </Border>

        <!--Precio-->
        <TextBlock Text="Precio del funko (*)" Grid.Row="1" Margin="30,20,0,0" FontWeight="Black"
           FontSize="20" FontStyle="Italic" Grid.Column="1"/>
      
        <Border BorderBrush="#14a9ff" BorderThickness="2" 
        Grid.Row="1" Margin="0,50,0,0" Width="280" Grid.Column="1">
            <TextBox x:Name="precio_funko" PreviewTextInput="SoloDecimales" Grid.Row="1" Background="White" />
        </Border>

        <!--Categoría y Ubicación-->
        <!--Categoría-->
        <TextBlock Text="Categoría del funko (*)" Grid.Row="2" Margin="30,20,0,0" FontWeight="Black"
                 FontSize="20" FontStyle="Italic"/>
        <Border BorderBrush="#005dd6" BorderThickness="2" Grid.Row="2"
                Margin="0,50,0,0" Width="280">
                <ComboBox x:Name="categoria_funko" Grid.Row="2" Background="White"
                        DisplayMemberPath="Descripcion"  SelectedValuePath="Idcategorias"/>
            </Border>
        <!--Ubicación-->
        <TextBlock Text="Ubicación del funko" Grid.Row="2" Margin="30,20,0,0" 
         FontSize="20" FontStyle="Italic" Grid.Column="1"/>
        <Border BorderBrush="#005dd6" BorderThickness="2" Grid.Row="2" Grid.Column="1"
          Margin="0,50,0,0" Width="280">
            <ComboBox x:Name="ubicacion_funko" Grid.Row="3" Background="White"
                      DisplayMemberPath="Descripcion" SelectedValuePath="IdUbicacion"/>
        </Border>

        <!--Stock (checkbox y ventana en collapsed o no)-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center"
                    Grid.Column="0" VerticalAlignment="Center" Margin="0,20,0,0">
            
            <!--Checkbox para marcar si hay stock o no-->
            <TextBlock Text="Stock disponible:" FontSize="20" FontStyle="Italic" Grid.Column="0"
                       Margin="0,0,0,0"/>
            <CheckBox x:Name="Stock" Grid.Row="3" Grid.Column="0" Checked="Stock_Checked"
                      Unchecked="Stock_Unchecked"/>
        </StackPanel>

        <!--Cantidad de stock [si se marca el checkbox]-->
        <!--Ubicación-->
        <StackPanel x:Name="CantidadStock_Panel" Grid.Row="3" Grid.Column="1" Margin="0,5" Visibility="Collapsed">
            <TextBlock Text="Cantidad de stock" Grid.Row="3" Margin="30,20,0,0" 
   FontSize="20" FontStyle="Italic" Grid.Column="1"/>
            <Border BorderBrush="#14a9ff" BorderThickness="2" Grid.Row="3" Grid.Column="1"
     Width="280">
                <TextBox x:Name="cantidad_stock" Grid.Row="3" Background="White" PreviewTextInput="SoloNumeros"/>
            </Border>
        </StackPanel>
        <!--Fecha de ingreso-->
        <TextBlock Text="Fecha de Ingreso" Grid.Row="4" Margin="30,20,0,0"
          FontSize="20" FontStyle="Italic"/>
        <Border BorderBrush="#14a9ff" BorderThickness="2" Background="White"
       Grid.Row="4" Margin="0,50,0,0" Width="280">
            <DatePicker x:Name="fecha_funko" SelectedDate="{Binding FechaIngreso}"/> <!--Hacer que sea una fecha y no texto puro-->
        </Border>

        <!--Botones CANCELAR y GUARDAR-->
        <Button Grid.Row="5" Margin="0,40,0,0" Width="190" Height="60" Background="Red" 
                BorderBrush="DarkRed" BorderThickness="4" Content="CANCELAR" Foreground="White"
                FontSize="30" Click="Cancelar_Boton"/>


        <Button Grid.Row="5" Margin="0,40,0,0" Width="190" Height="60" Background="Blue" 
         BorderBrush="DarkBlue" BorderThickness="4" Content="GUARDAR" Foreground="White" Grid.Column="1"
         FontSize="30" Click="Guardado"/>
    </Grid>
</mah:MetroWindow>